<Page x:Class="WpfGebruiker.MijnVoertuigenGetrokken"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGebruiker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MijnVoertuigenGetrokken">

    <ScrollViewer HorizontalScrollBarVisibility="Visible">
        <Grid Background="white">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="232"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>

            <Label x:Name="lblVoertuigToevoegen" FontSize="30" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Content="Voertuig Toevoegen"/>
            <Label x:Name="lblAfbeeldingen" Grid.Row="1" Content="Afbeeldingen toevoegen:"></Label>
            <Button x:Name="btnAfbeeldingen" Grid.Row="1" Grid.Column="1" Content="Uploaden"></Button>
            <Image x:Name="imgVehicle" Grid.Column="0" Grid.Row="2"/>

            <TextBlock x:Name="tbxNaam" Grid.Column="1" Grid.Row="3" Text="e" Margin="0 10"/>
            <Label x:Name="lblNaam" Grid.Column="0" Grid.Row="3" Content="Naam:" Padding="10 10 0 0"/>
            <TextBlock x:Name="tbxBeschrijving" Grid.Column="1" Grid.Row="4" Text="e" Margin="0 10" Grid.ColumnSpan="2"/>
            <Label x:Name="lblBeschrijving" Grid.Column="0" Grid.Row="4" Content="Beschrijving:" Padding="10 10 0 0"/>
            <TextBlock x:Name="tbxMerk" Grid.Column="1" Grid.Row="5" Text="e" Margin="0 10"/>
            <Label x:Name="lblMerk" Grid.Column="0" Grid.Row="5" Content="Merk:" Padding="10 10 0 0"/>
            <TextBlock x:Name="tbxBouwjaar" Grid.Column="1" Grid.Row="6" Text="e" Margin="0 10"/>
            <Label x:Name="lblBouwjaar" Grid.Row="6" Content="Bouwjaar:" Padding="10 10 0 0" Grid.ColumnSpan="3"/>
            <TextBlock x:Name="tbxGewicht" Grid.Column="1" Grid.Row="7" Text="e" Margin="0 10"/>
            <Label x:Name="lblGewicht" Content="Gewicht (in kg):" Padding="10 10 10 0" Grid.Row="7" />
            <TextBlock x:Name="tbxMaxGewicht" Grid.Column="1" Grid.Row="8" Text="e" Margin="0 10"/>
            <Label x:Name="lblMaxGewicht" Content="Max. Gewicht (in kg):" Padding="10 10 10 0" Grid.Row="8" />
            <TextBlock x:Name="tbxAfmetingen" Grid.Column="1" Grid.Row="9" Text="e" Margin="0 10"/>
            <Label x:Name="lblAfmetingen" Content="Afmetingen:" Padding="10 10 10 0" Grid.Row="9" />
            <Label x:Name="lblGeremd" Grid.Column="2" Grid.Row="3" Content="Geremd:" Padding="10 10 0 0"/>
            <RadioButton x:Name="rdbGeremd"></RadioButton>


            <Button x:Name="btnAnnuleren" Grid.Row="9" Grid.Column="2" Content="Annuleren" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10" Margin="10 0 0 0"/>
            <Button x:Name="btnOpslaan" Grid.Row="9" Grid.Column="2" Content="Opslaan" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10" Margin="100 0 10 0"/>
            <Border Grid.Row="10" Grid.ColumnSpan="3" Background="LightGray"></Border>
        </Grid>
    </ScrollViewer>
</Page>
